echo "<br>" >> README.md
echo "## Complete" >> README.md

# Find all PNG images in the Complete directory and its subdirectories, and sort them numerically
find "./Complete" -type f -name "*.png" | sort -t '-' -k 2n | while read file
do
  echo "<img src=\"$file\">" >> README.md
  echo "" >> README.md
done


# Generate image tags for docker-local directory
echo "<br>" >> README.md
echo "## docker-local" >> README.md

# Find all PNG images in the docker-local directory and its subdirectories, and sort them numerically

#!/bin/bash

# Generate image tags for root directory
echo "# Week 3: Screencast" > README.md

# Find all PNG images in the root directory and its subdirectories, and sort them numerically
find . -type f -name "*.png" | sort -t '-' -k 2n | while read file
do
  echo "<img src=\"$file\">" >> README.md
  echo "" >> README.md
done

# Generate image tags for Amplify directory
echo "<br>" >> README.md
echo "## Amplify" >> README.md

# Find all PNG images in the Amplify directory and its subdirectories, and sort them numerically
find "./Amplify" -type f -name "*.png" | sort -t '-' -k 2n | while read file
do
  echo "<img src=\"$file\">" >> README.md
  echo "" >> README.md
done

# Generate image tags for Codespaces directory
echo "<br>" >> README.md
